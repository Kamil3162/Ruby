<h1>New Tag</h1>

<%= form_for [@product, @tag], url: product_tags_path(@product) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.submit "Create Tag" %>
<% end %>

<%= link_to "Back", product_tags_path(@product) %>