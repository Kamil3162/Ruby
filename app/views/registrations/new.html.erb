<h1>Rejestracja</h1>
<div style="text-align: center">
  <%= form_with model: @user, url: rejestracja_path do |form| %>
    <% if @user.errors.any? %>
      <div>
        <% @user.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
    <div>
      Login <%= form.text_field :email %>
    </div>
    <div>
      Haslo <%= form.password_field :password %>
    </div>
    <div>
      Haslo <%= form.password_field :password_confirmation %>
    </div>
    <%= form.submit "Zarejestruj" %>
  <% end %>
</div>
